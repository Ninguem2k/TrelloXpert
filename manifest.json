{
    "manifest_version": 3,
    "name": "TrelloX",
    "version": "1.0.0",
    "description": "Exporte grupos de cards conclu√≠dos do Trello para Markdown e GitHub com atalhos simples.",
    "permissions": [
      "activeTab",
      "clipboardWrite",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["https://trello.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "options_page": "options.html",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_title": "TrelloX"
    }
  }